<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="#41FFC107"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/picture_song"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="picturn_song"
            android:src="@drawable/music_note_24"
            app:tint="#FF5722"/>

        <LinearLayout
            android:id="@+id/layout_song_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/picture_song"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLength="30"
                android:maxLines="1"
                android:text="title songsafsfaffffffffffffffffffffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLength="30"
                android:maxLines="1"
                android:text="artist song"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/clear_24"
            app:tint="@color/black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_repeat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/repeat_24" />
        <ImageView
            android:id="@+id/icon_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_repeat"
            android:layout_toStartOf="@id/icon_play_pause"
            android:src="@drawable/skip_previous_24"/>
        <ImageView
            android:id="@+id/icon_play_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/play_arrow_24" />
        <ImageView
            android:id="@+id/icon_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon_play_pause"
            android:layout_toStartOf="@id/icon_shuffle"
            android:src="@drawable/skip_next_24" />
        <ImageView
            android:id="@+id/icon_shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/shuffle_24"/>

    </RelativeLayout>

</LinearLayout>